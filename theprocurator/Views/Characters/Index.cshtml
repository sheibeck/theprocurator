@model IEnumerable<theprocurator.Data.Model.Character>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharacterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharacterUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharacterData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharacterSheetId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharacterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharacterUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharacterData)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharacterSheetId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CharacterId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CharacterId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CharacterId })
        </td>
    </tr>
}

</table>
