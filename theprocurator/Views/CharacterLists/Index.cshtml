@model IEnumerable<theprocurator.Data.Model.CharacterList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Character Lists</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>       
        <th>
            @Html.DisplayNameFor(model => model.CharacterListName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>     
        <td>
            <div class="h3">
                @Html.DisplayFor(modelItem => item.CharacterListName)
            </div>
            <div class="small">
                <em>(@item.Characters.Count() characters in list)</em>
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Published)
        </td>
        <td>
            <div class="btn-group-sm btn-group-vertical">
                <a href="@Url.Action("Edit", "CharacterLists", new { id = item.CharacterListId })" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                <a href="@Url.Action("Print", "CharacterLists", new { id = item.CharacterListId })" target="_blank" class="btn btn-info"><span class="glyphicon glyphicon-print"></span> Print</a>
                <a href="@Url.Action("Copy", "CharacterLists", new { id = item.CharacterListId })" class="btn btn-default"><span class="glyphicon glyphicon-copy"></span> Copy</a>
                <a href="@Url.Action("Delete", "CharacterLists", new { id = item.CharacterListId })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</a>
            </div>
        </td>
    </tr>
}

</table>
